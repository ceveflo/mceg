<% content_for :metaheader  do %>
    <meta property="og:title" content="Mediacenter El Gráfico - <%= @video.title%>"/>
        <meta property="og:description" content="Mediacenter El Gráfico <%= @video.title%>"/>
        <meta property="og:image" content="<%= @video.image%>"/>
        <meta property="og:url" content="http://mediacenter.elgrafico.com/v/<%= @video.slug_name%>"/>
<% end %>
<% content_for :headtitle  do %>
    <%= @video.title%>
<% end %>
<div class="content">

    <%= render partial:"header"%>


<div class="wrap">

<div class="audios">
			<!--INICIA PLAYER DE AUDIO-->
		<%= image_tag @video.image %>
<div id="wrapper">
		  <audio preload="auto" controls>
				<source src="<%=  @video.media_files[0].url_file%>">
			
			</audio>
			
			

			
		</div></div>



<div class="info">
<h2><%= @video.title%></h2>
<p id="tags_p">
Tags: 
	<%=raw get_tags(@video.media_tag)%>
</p>
<span class='st_sharethis_hcount' displayText='ShareThis'></span>
<span class='st_facebook_hcount' displayText='Facebook'></span>
<span class='st_twitter_hcount' displayText='Tweet'></span>
<span class='st_linkedin_hcount' displayText='LinkedIn'></span>
<span class='st_pinterest_hcount' displayText='Pinterest'></span>
<span class='st_email_hcount' displayText='Email'></span>
</div>
<div class="clearfix"></div>
<div class="azul">
<div class="coments">
 <%= render partial: "disqus" %>
</div>
<div id="more">
<div id="container">

		<%= render partial: "griditems" , locals: { archive: @related}%>

</div>
</div>


</div>

</div>


</div>
<%= javascript_include_tag 'audioplayer', 'data-turbolinks-track' => false %>

<script>
	var audioplay;
	audioplay = function() {
		 $( 'audio' ).audioPlayer(); } ;

	$(window).load(audioplay);
	$(window).on('page:load', audioplay)

</script>
