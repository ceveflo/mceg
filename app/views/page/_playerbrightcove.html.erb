<script type="text/javascript">

 var player , video, content, exp;
          var adModule;
          //var oldAdTranslatorURL;
          var skip=true;

           function onTemplateLoaded(pExperience) {
              player = brightcove.getExperience(pExperience);
               video   = player.getModule(APIModules.VIDEO_PLAYER);
               content = player.getModule(APIModules.CONTENT);
                exp     = player.getModule(APIModules.EXPERIENCE);
              adModule = player.getModule(APIModules.ADVERTISING);
              
              adModule.addEventListener('adProgress',aparecer,false);
              video.enableInitialBandwidthDetection(true);
             // video.setDefaultBufferTime(20);
           
          
          }

          function detener(){
            
         
          adModule.stopAd();
             $(".skip_ad").fadeOut();  
             
            
          }

        
          function aparecer(){
            
           if(skip){
               skip=false;
             setTimeout(function() { $(".skip_ad").fadeIn();   }, 0); 
            }
             
          }
</script>